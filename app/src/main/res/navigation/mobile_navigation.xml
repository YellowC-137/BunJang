<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    app:labelVisibilityMode="labeled"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.lightningmarket.src.btm_nav.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_talk"
        android:name="com.example.lightningmarket.src.btm_nav.talk.TalkFragment"
        android:label="번개톡"
        tools:layout="@layout/fragment_talk" />

    <fragment
        android:id="@+id/navigation_mypage"
        android:name="com.example.lightningmarket.src.btm_nav.mypage.MypageFragment"
        android:label="MY"
        tools:layout="@layout/fragment_mypage" />

    <activity
        android:id="@id/navigation_search"
        android:name="com.example.lightningmarket.src.btm_nav.search.SearchActivity"
        android:label="검색"
        tools:layout="@layout/activity_search"
        />
    <activity
        android:id="@id/navigation_post"
        android:name="com.example.lightningmarket.src.btm_nav.post.PostActivity"
        android:label="등록"
        tools:layout="@layout/activity_post"
        />

</navigation>