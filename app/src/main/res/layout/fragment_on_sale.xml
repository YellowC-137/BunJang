<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.btm_nav.mypage.sub.OnSaleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_empty"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/mypage_none"/>
        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="판매중인 상품이 없습니다."
            android:layout_gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/on"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1개"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:id="@+id/tv_cnt"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mp2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv2"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mp1"
            app:layout_constraintTop_toBottomOf="@id/iv2"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/iv1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mp3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv2"
            android:id="@+id/iv3"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mp4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv3"
            android:id="@+id/iv4"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mp5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv4"
            android:id="@+id/iv5"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/tv_cnt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/shoe3"
            android:scaleType="centerCrop"
            android:id="@+id/iv_item"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_seller"
            app:layout_constraintTop_toTopOf="@id/iv_item"
            app:layout_constraintStart_toEndOf="@id/iv_item"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:text="판매자"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_seller"
            app:layout_constraintStart_toEndOf="@id/iv_item"
            android:layout_margin="10dp"
            android:text="가격"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/tv_price"/>
        <TextView
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_item"
            app:layout_constraintEnd_toEndOf="@id/iv_item"
            android:text="방금 전"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/thickbox"
            android:text="택배신청"
            app:layout_constraintBottom_toBottomOf="@id/iv_item"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@id/iv_item"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예약됨"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/iv_item"
                app:layout_constraintEnd_toEndOf="@id/iv_item"
                app:layout_constraintBottom_toBottomOf="@id/iv_item"
                app:layout_constraintTop_toBottomOf="@id/iv_clock"
                android:id="@+id/tv_reserve"/>
        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/mp_res"
            app:layout_constraintStart_toStartOf="@id/iv_item"
            app:layout_constraintEnd_toEndOf="@id/iv_item"
            app:layout_constraintTop_toTopOf="@id/iv_item"
            app:layout_constraintBottom_toTopOf="@id/tv_reserve"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>